<Window x:Class="FigCrafterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FigCrafterApp"
        xmlns:vm="clr-namespace:FigCrafterApp.ViewModels"
        xmlns:views="clr-namespace:FigCrafterApp.Views"
        mc:Ignorable="d"
        Title="FigCrafter" Height="720" Width="1280"
        Background="#FF1E1E1E" Foreground="White">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <local:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
        <local:SKColorToSolidColorBrushConverter x:Key="SKColorToSolidColorBrushConverter"/>
        <!-- タブのスタイル定義（ダークモード用） -->
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="Panel">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" />
                            <Border x:Name="BottomBorder" Height="2" Background="Transparent" VerticalAlignment="Bottom"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="#FF3E3E42"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="BottomBorder" Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Panel" Property="Background" Value="#FF3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToolButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu/Toolbar -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- ToolBar / Menu Placeholder -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF333333">
            <Button Content="📁 開く" Command="{Binding OpenProjectCommand}" Margin="10,5,5,5" Padding="10,2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="プロジェクトを開く"/>
            <Button Content="💾 保存" Command="{Binding SaveProjectCommand}" Margin="5,5" Padding="10,2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="プロジェクトを保存する"/>
            
            <Button Content="📥 インポート" Command="{Binding ImportFileCommand}" Margin="15,5,5,5" Padding="10,2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="画像やAI(PDF互換)/EMFファイルをキャンバスに読み込む"/>
            
            <Button Content="新規プロジェクト" Command="{Binding NewDocumentCommand}" Margin="15,5,10,5" Padding="10,2" Background="#FF007ACC" Foreground="White" BorderThickness="0"/>
            
            <!-- 書き出しボタン群 -->
            <Button Content="📷 PNG抽出" Command="{Binding ExportPngCommand}" Margin="5,5,0,5" Padding="10,2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="PNGとして書き出し"/>
            <Button Content="📄 PDF抽出" Command="{Binding ExportPdfCommand}" Margin="2,5,0,5" Padding="10,2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="PDFとして書き出し"/>
            <Button Content="🖼️ TIF抽出" Command="{Binding ExportTifCommand}" Margin="2,5,10,5" Padding="10,2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="TIFFとして書き出し"/>
            <!-- ActiveDocument の Undo/Redo コマンドにバインド -->
            <Button Content="↩ 取り消し" Command="{Binding ActiveDocument.UndoCommand}" Margin="15,5,5,5" Padding="10,2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="元に戻す"/>
            <Button Content="↪ やり直し" Command="{Binding ActiveDocument.RedoCommand}" Margin="5,5" Padding="10,2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="やり直す"/>
        </StackPanel>

        <!-- Tabbed Interface -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/> <!-- Sidebar/Properties -->
            </Grid.ColumnDefinitions>

            <TabControl Grid.Column="0" ItemsSource="{Binding Documents}" SelectedItem="{Binding ActiveDocument}" Background="#FF2D2D30" BorderThickness="0">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                            <Button Content="" FontFamily="Segoe MDL2 Assets" Command="{Binding DataContext.FloatDocumentCommand, RelativeSource={RelativeSource AncestorType=TabControl}}" 
                                    CommandParameter="{Binding}"
                                    Margin="10,0,0,0" Background="Transparent" Foreground="Gray" BorderThickness="0" VerticalAlignment="Center" ToolTip="ウィンドウを分離">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#FF007ACC"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="×" Command="{Binding DataContext.CloseDocumentCommand, RelativeSource={RelativeSource AncestorType=TabControl}}" 
                                    CommandParameter="{Binding}"
                                    Margin="10,0,0,0" Background="Transparent" Foreground="Gray" BorderThickness="0" VerticalAlignment="Center">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <views:CanvasView DataContext="{Binding}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>

            <!-- Sidebar -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#FF252526">
            <StackPanel Margin="10">
                <TextBlock Text="アートボード設定" FontWeight="Bold" Margin="0,0,0,15" Foreground="White" FontSize="14"/>
                
                <TextBlock Text="キャンバス名" Margin="0,5" Foreground="Gray"/>
                <TextBox Text="{Binding ActiveDocument.Title, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>

                <TextBlock Text="幅 (mm)" Margin="0,15,0,5" Foreground="Gray"/>
                <TextBox Text="{Binding ActiveDocument.WidthMm, UpdateSourceTrigger=PropertyChanged, Delay=500}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>

                <TextBlock Text="高さ (mm)" Margin="0,15,0,5" Foreground="Gray"/>
                <TextBox Text="{Binding ActiveDocument.HeightMm, UpdateSourceTrigger=PropertyChanged, Delay=500}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>

                <Separator Margin="0,20" Background="#FF3E3E42"/>
                
                <TextBlock Text="描画ツール" FontWeight="Bold" Margin="0,5" Foreground="White"/>
                <UniformGrid Columns="2" Margin="0,10">
                    <RadioButton Content="選択" Style="{StaticResource ToolButtonStyle}" 
                                 IsChecked="{Binding ActiveDocument.CurrentTool, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static vm:DrawingTool.Select}}"/>
                    <RadioButton Content="四角形" Style="{StaticResource ToolButtonStyle}" 
                                 IsChecked="{Binding ActiveDocument.CurrentTool, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static vm:DrawingTool.Rectangle}}"/>
                    <RadioButton Content="円" Style="{StaticResource ToolButtonStyle}" 
                                 IsChecked="{Binding ActiveDocument.CurrentTool, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static vm:DrawingTool.Ellipse}}"/>
                    <RadioButton Content="直線" Style="{StaticResource ToolButtonStyle}" 
                                 IsChecked="{Binding ActiveDocument.CurrentTool, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static vm:DrawingTool.Line}}"/>
                    <RadioButton Content="テキスト" Style="{StaticResource ToolButtonStyle}" 
                                 IsChecked="{Binding ActiveDocument.CurrentTool, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static vm:DrawingTool.Text}}"/>
                    <RadioButton Content="消しゴム" Style="{StaticResource ToolButtonStyle}" 
                                 IsChecked="{Binding ActiveDocument.CurrentTool, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static vm:DrawingTool.Eraser}}"/>
                </UniformGrid>

                <Separator Margin="0,15" Background="#FF3E3E42"/>

                <!-- 選択オブジェクトのプロパティパネル -->
                <StackPanel DataContext="{Binding ActiveDocument.SelectedObject}">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="オブジェクトプロパティ" FontWeight="Bold" Margin="0,5,0,10" Foreground="White"/>

                    <TextBlock Text="重ね順:" Margin="0,0,0,5" Foreground="Gray"/>
                    <UniformGrid Columns="2" Margin="0,0,0,10">
                        <Button Content="最前面へ" Command="{Binding DataContext.ActiveDocument.BringToFrontCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="前面へ" Command="{Binding DataContext.ActiveDocument.BringForwardCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="背面へ" Command="{Binding DataContext.ActiveDocument.SendBackwardCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="最背面へ" Command="{Binding DataContext.ActiveDocument.SendToBackCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                    </UniformGrid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="X座標:" Foreground="Gray" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding X, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Y座標:" Foreground="Gray" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Y, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="幅:" Foreground="Gray" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Width, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="高さ:" Foreground="Gray" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Height, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="回転:" Foreground="Gray" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Rotation, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                    </Grid>

                    <TextBlock Text="不透明度:" Margin="0,10,0,0" Foreground="Gray"/>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <!-- 0.0 ~ 1.0 のOpacityをUI操作 -->
                        <Slider Grid.Column="0" Minimum="0" Maximum="1" Value="{Binding Opacity}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Opacity, StringFormat=\{0:F2\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5" TextAlignment="Center"/>
                    </Grid>
                    
                    <!-- 直線オブジェクト専用UI -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Converter={x:Static local:TypeVisibilityConverter.Instance}, ConverterParameter=LineObject}" Value="Visible">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="矢印設定:" Margin="0,10,0,5" Foreground="Gray"/>
                        <CheckBox Content="始点に矢印を表示" IsChecked="{Binding HasArrowStart, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Margin="0,5"/>
                        <CheckBox Content="終点に矢印を表示" IsChecked="{Binding HasArrowEnd, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Margin="0,5"/>
                    </StackPanel>

                    <!-- テキストオブジェクト専用UI -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Converter={x:Static local:TypeVisibilityConverter.Instance}, ConverterParameter=TextObject}" Value="Visible">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="テキスト内容:" Margin="0,10,0,5" Foreground="Gray"/>
                        <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>
                        <Grid Margin="0,10,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="フォント:" Foreground="Gray" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding FontFamily, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                        </Grid>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="サイズ:" Foreground="Gray" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                        </Grid>
                    </StackPanel>

                    <!-- 画像オブジェクト専用UI -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Converter={x:Static local:TypeVisibilityConverter.Instance}, ConverterParameter=ImageObject}" Value="Visible">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="画像モード:" Margin="0,10,0,5" Foreground="Gray"/>
                        <CheckBox Content="グレースケール化" IsChecked="{Binding IsGrayscale, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Margin="0,5"/>

                        <TextBlock Text="トリミング:" Margin="0,10,0,5" Foreground="Gray"/>
                        <Button Content="トリミングハンドル表示" Command="{Binding DataContext.ActiveDocument.ToggleCropModeCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,5,0,10" Padding="5" Background="#FF3E3E42" Foreground="White" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.ActiveDocument.IsCropMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                            <Setter Property="Background" Value="#FF007ACC"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Crop X:" Foreground="Gray" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding CropX, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                        </Grid>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Crop Y:" Foreground="Gray" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding CropY, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                        </Grid>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Crop W:" Foreground="Gray" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding CropWidth, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                        </Grid>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Crop H:" Foreground="Gray" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding CropHeight, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                        </Grid>
                    </StackPanel>

                    <TextBlock Text="線の太さ:" Margin="0,10,0,5" Foreground="Gray"/>
                    <TextBox Text="{Binding StrokeWidth, StringFormat=\{0:F1\}, UpdateSourceTrigger=PropertyChanged}" Background="#FF3E3E42" Foreground="White" BorderThickness="0" Padding="5"/>
                    
                    <TextBlock Text="塗り色 (ARGB):" Margin="0,10,0,5" Foreground="Gray"/>
                    <!-- 簡易実装として文字列入力で妥協せずコンバータを通じた直接入力は難しいため、将来的にカラーピッカーにする前提で一旦RGB文字列等の実装をするか、ここでは簡略化して TextBox で扱う事は難しいので、とりあえず後回しにし、表示のみまたは固定ボタン等にするか... -->
                    <!-- TODO: 実際に色を変更するための簡易UI -->
                    <UniformGrid Columns="4" Margin="0,5">
                        <Button Background="SkyBlue" Command="{Binding DataContext.ChangeFillColorCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="SkyBlue" Height="20" Margin="2" BorderThickness="0"/>
                        <Button Background="Salmon" Command="{Binding DataContext.ChangeFillColorCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Salmon" Height="20" Margin="2" BorderThickness="0"/>
                        <Button Background="LightGreen" Command="{Binding DataContext.ChangeFillColorCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="LightGreen" Height="20" Margin="2" BorderThickness="0"/>
                        <Button Background="Transparent" Command="{Binding DataContext.ChangeFillColorCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Transparent" Height="20" Margin="2" BorderThickness="1" BorderBrush="Gray" Content="✕" Foreground="White"/>
                    </UniformGrid>

                    <TextBlock Text="枠線色:" Margin="0,10,0,5" Foreground="Gray"/>
                    <UniformGrid Columns="4" Margin="0,5">
                        <Button Background="Black" Command="{Binding DataContext.ChangeStrokeColorCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Black" Height="20" Margin="2" BorderThickness="0"/>
                        <Button Background="Red" Command="{Binding DataContext.ChangeStrokeColorCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Red" Height="20" Margin="2" BorderThickness="0"/>
                        <Button Background="Blue" Command="{Binding DataContext.ChangeStrokeColorCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Blue" Height="20" Margin="2" BorderThickness="0"/>
                        <Button Background="Transparent" Command="{Binding DataContext.ChangeStrokeColorCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Transparent" Height="20" Margin="2" BorderThickness="1" BorderBrush="Gray" Content="✕" Foreground="White"/>
                    </UniformGrid>

                    <Separator Margin="0,15" Background="#FF3E3E42"/>

                    <TextBlock Text="整列:" Margin="0,0,0,5" Foreground="Gray"/>
                    <UniformGrid Columns="3" Margin="0,0,0,5">
                        <Button Content="⬅ 左" Command="{Binding DataContext.ActiveDocument.AlignLeftCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="↔ 中央" Command="{Binding DataContext.ActiveDocument.AlignCenterHCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="➡ 右" Command="{Binding DataContext.ActiveDocument.AlignRightCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="⬆ 上" Command="{Binding DataContext.ActiveDocument.AlignTopCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="↕ 中央" Command="{Binding DataContext.ActiveDocument.AlignCenterVCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="⬇ 下" Command="{Binding DataContext.ActiveDocument.AlignBottomCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                    </UniformGrid>

                    <Separator Margin="0,15" Background="#FF3E3E42"/>

                    <TextBlock Text="グループ:" Margin="0,0,0,5" Foreground="Gray"/>
                    <UniformGrid Columns="2" Margin="0,0,0,5">
                        <Button Content="📦 グループ化" Command="{Binding DataContext.ActiveDocument.GroupCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                        <Button Content="📤 解除" Command="{Binding DataContext.ActiveDocument.UngroupCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                    </UniformGrid>

                    <Separator Margin="0,15" Background="#FF3E3E42"/>

                    <Button Content="🗑 選択オブジェクトを削除" Command="{Binding DataContext.ActiveDocument.DeleteSelectedCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,5" Padding="5" Background="#FF6B2222" Foreground="White" BorderThickness="0"/>
                    
                </StackPanel>

                <Separator Margin="0,15" Background="#FF3E3E42"/>

                <!-- レイヤーパネル -->
                <TextBlock Text="レイヤーパネル" FontWeight="Bold" Margin="0,5,0,10" Foreground="White" FontSize="14"/>
                <Grid Height="150" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <UniformGrid Columns="4" Margin="0,0,0,5">
                        <Button Content="➕ 追加" Command="{Binding ActiveDocument.AddLayerCommand}" Margin="2" Padding="2" Background="#FF007ACC" Foreground="White" BorderThickness="0"/>
                        <Button Content="🗑 削除" Command="{Binding ActiveDocument.RemoveLayerCommand}" Margin="2" Padding="2" Background="#FF6B2222" Foreground="White" BorderThickness="0"/>
                        <Button Content="↑ 上へ" Command="{Binding ActiveDocument.MoveLayerUpCommand}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="選択したレイヤーを上に移動"/>
                        <Button Content="↓ 下へ" Command="{Binding ActiveDocument.MoveLayerDownCommand}" Margin="2" Padding="2" Background="#FF3E3E42" Foreground="White" BorderThickness="0" ToolTip="選択したレイヤーを下に移動"/>
                    </UniformGrid>

                    <ListBox Grid.Row="1" ItemsSource="{Binding ActiveDocument.Layers}" SelectedItem="{Binding ActiveDocument.ActiveLayer, Mode=TwoWay}" Background="#FF3E3E42" BorderThickness="0" Foreground="White">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ToggleButton Grid.Column="0" IsChecked="{Binding IsVisible}" Margin="0,0,5,0" Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" ToolTip="表示/非表示の切り替え">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Content" Value="👁" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter Property="Content" Value="ー" />
                                                        <Setter Property="Foreground" Value="Gray" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    
                                    <ToggleButton Grid.Column="1" IsChecked="{Binding IsLocked}" Margin="0,0,5,0" Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" ToolTip="ロック/解除の切り替え">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Content" Value="🔓" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter Property="Content" Value="🔒" />
                                                        <Setter Property="Foreground" Value="Gray" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    
                                    <TextBox Grid.Column="2" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" Foreground="White" BorderThickness="0" VerticalAlignment="Center" Padding="2"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

            </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#FF007ACC" Foreground="White">
            <StatusBarItem Content="Ready"/>
            <Separator Background="#33FFFFFF"/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Size: "/>
                    <TextBlock Text="{Binding ActiveDocument.WidthMm, StringFormat=\{0:F1\}}"/>
                    <TextBlock Text=" x "/>
                    <TextBlock Text="{Binding ActiveDocument.HeightMm, StringFormat=\{0:F1\}}"/>
                    <TextBlock Text=" mm"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
